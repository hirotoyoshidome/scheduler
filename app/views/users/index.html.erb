<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>スケジュール　メンバー</h1>
</div>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @users.exists? then %>
      <p>現在ユーザーは設定されていません</p>
    <% end %>
    <% @users.each do |user| %>
      <tr>
        <td><h4><%= user.name %></h4></td>
        <td><h4><%= user.email %></h4></td>
        <td><%= link_to 'スケジュールをみる', user, :class => 'btn btn-info' %></td>
        <td><%= link_to 'スケジュールをたてる', edit_user_path(user), :class => 'btn btn-success'%></td>
        <td><%= button_to 'このユーザを消す', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '一覧の表示', schedules_path, :class => 'btn btn-warning' %>
<%= link_to '新規で登録する', new_user_path, :class => 'btn btn-default' %>
